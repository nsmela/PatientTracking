@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="@IcyGradient" />
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText>RADIGATE: Medical Physics Patient Management</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Class="mt-1">Application</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>


@code {
    bool _drawerOpen = true;
    bool _isDarkMode = true;

    MudTheme IcyGradient = new MudTheme {
        PaletteDark = new PaletteDark(){
                Primary = "#2C74B3",
                Secondary = "#205295",
                Tertiary = "#144272",
                Background = "#0A2647",
                AppbarBackground = "#205295"
        }
    };


    void DrawerToggle() {
        _drawerOpen = !_drawerOpen;
    }
}
