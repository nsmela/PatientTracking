@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="@IcyGradient" />
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudDrawer Open="true" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Class="mt-1">RADIGATE</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="mt-n16">
        @Body
    </MudMainContent>
</MudLayout>


@code {
    bool _isDarkMode = true;

    MudTheme IcyGradient = new MudTheme {
        PaletteDark = new PaletteDark(){
                Primary = "#2C74B3",
                Secondary = "#205295",
                Tertiary = "#144272",
                Background = "#0A2647",
                AppbarBackground = "#205295"
        }
    };
}
