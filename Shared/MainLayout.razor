@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="@IcyGradient" />
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText>RADIGATE</MudText>
        <MudSpacer />
        <MudText>Welcome, USERNAME</MudText>
        <MudAvatar Class="ml-2" Color="Color.Tertiary">U</MudAvatar>
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudPaper Height="120px" Class="Color.Inherit" />
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>


@code {
    bool _isDarkMode = true;

    bool _drawerOpen = true;

    void DrawerToggle() {
        _drawerOpen = !_drawerOpen;
    }


    MudTheme IcyGradient = new MudTheme {
        PaletteDark = new PaletteDark(){
                Primary = "#2C74B3",
                Secondary = "#205295",
                Tertiary = "#144272",
                Background = "#0A2647",
                AppbarBackground = "#205295"
        }
    };
}
